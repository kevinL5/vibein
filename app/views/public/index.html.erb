<% content_for :head do %>
  <meta property="og:title" content="<%= @source.title %>" />
  <meta property="og:type" content="Music" />
  <meta property="og:url" content="http://vibein.herokuapp.com/sources/<%= @source.id %>/public" />
  <meta property="og:image" content="<%= @source.picture.url %>" />
  <meta property="og:description" content="Sauvegarder et partager vos musiques favorites via Vibe In " />
  <meta property="og:site_name" content="Vibe In" />
  <meta property="fb:admins" content="1466696496940225" />
<% end %>

<img src=<%= asset_path('girls-bg.jpg') %> class="bg" alt="Background">

<div class="nav-brand-public">
  <h2>VIBE IN</h2>
  <p>music embellishes the world</p>
</div>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

        <h1 class="text-center slogan-public">Sauvegarder et partager vos morceaux préférés</h1>

        <div class="embed-responsive embed-responsive-16by9">
          <%= render "sources/providers/#{@source.provider.downcase}", source: @source %>
        </div>

        <div class="text-center">
          <%= link_to 'Rejoindre la communauté', omniauth_authorize_path(:user, :facebook), :class => 'btn btn-lg btn-join' %>
        </div>

      </div>
    </div>
  </div>
</div>